@model WebShop.Models.Product
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create Product</h2>
<form asp-action="CreateProduct" method="post" enctype="multipart/form-data" class="form-container">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <div class="row g-3">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" max="1000000" placeholder="Enter price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="OldPrice" class="form-label">Old Price</label>
                <input asp-for="OldPrice" class="form-control" type="number" step="0.01" min="0" max="1000000" placeholder="Enter old price (optional)" />
                <span asp-validation-for="OldPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Stock" class="form-label">Stock</label>
                <input asp-for="Stock" class="form-control" type="number" min="0" max="10000" placeholder="Enter stock quantity" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories" required>
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="BrandId" class="form-label">Brand</label>
                <select asp-for="BrandId" class="form-control" asp-items="@ViewBag.Brands" required>
                    <option value="">Select Brand</option>
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter product description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                <label for="imageFile" class="form-label">Image</label>
                <input type="file" name="imageFile" class="form-control" accept=".jpg,.jpeg,.png,.gif,.webp" />
                @Html.ValidationMessage("imageFile", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-12">
            <div class="form-group form-check">
                <input asp-for="Featured" type="checkbox" class="form-check-input" id="Featured" />
                <label class="form-check-label" for="Featured">Featured Product</label>
                <span asp-validation-for="Featured" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Create Product</button>
            <a asp-action="Products" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}