<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebShop Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="d-flex">
    <nav id="sidebar" class="sidebar bg-primary text-white">
        <div class="sidebar-header d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <i class="bi bi-gear-fill fs-4 me-2"></i>
                <h4 class="text-white mb-0">Admin Panel</h4>
            </div>
            <div class="dropdown">
                <button class="btn btn-link text-white" type="button" id="adminDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle fs-5"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                    <li>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="ChangePassword">
                            <i class="bi bi-lock me-2"></i> Change Password
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Admin" asp-action="UpdateProfile">
                            <i class="bi bi-person me-2"></i> Update Profile
                        </a>
                    </li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
        <ul class="nav flex-column components">
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Brands"><i class="bi bi-bookmark-star me-2"></i> Brands</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Categories"><i class="bi bi-tags me-2"></i> Categories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Products"><i class="bi bi-box-seam me-2"></i> Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Orders"><i class="bi bi-cart-check me-2"></i> Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Vouchers"><i class="bi bi-ticket-perforated me-2"></i> Vouchers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Banners"><i class="bi bi-image me-2"></i> Banners</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Notifications"><i class="bi bi-bell me-2"></i> Notifications</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="Users"><i class="bi bi-people me-2"></i> Users</a>
            </li>
        </ul>
    </nav>

    <div class="content flex-grow-1">
        <main role="main" class="container-fluid">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>