<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand logo" asp-controller="Home" asp-action="Index">WebShop</a>
                    <nav class="ms-4">
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home"></i> Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Products">
                                    <i class="fas fa-box"></i> Products
                                </a>
                            </li>
                            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Carts">
                                        <i class="fas fa-shopping-cart"></i> Cart
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Orders">
                                        <i class="fas fa-receipt"></i> Orders
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
                <div class="d-flex align-items-center">
                    <form class="search-form me-3" asp-controller="Home" asp-action="Products" method="get">
                        <input type="text" name="searchString" class="form-control" placeholder="Search products..." />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="nav-link me-3" asp-controller="User" asp-action="Dashboard">
                            <i class="fas fa-user-circle"></i> @User.Identity.Name
                        </a>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="nav-link btn btn-link">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="nav-link me-3" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                        <a class="nav-link" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus"></i> Register
                        </a>
                    }
                </div>
            </div>
        </div>
    </header>

    <main role="main" class="flex-grow-1">
        <div class="container main-content">
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <h3>About Us</h3>
                    <p>WebShop is a trusted electronics store, offering high-quality products at reasonable prices.</p>
                </div>
                <div class="col-md-4">
                    <h3>Contact</h3>
                    <p><i class="fas fa-map-marker-alt me-2"></i> 123 ABC Street, District 1, HCMC</p>
                    <p><i class="fas fa-phone me-2"></i> 0123 456 789</p>
                    <p><i class="fas fa-envelope me-2"></i> info@webshop.com</p>
                </div>
                <div class="col-md-4">
                    <h3>Support</h3>
                    <ul class="list-unstyled">
                        <li><a href="#">Warranty Policy</a></li>
                        <li><a href="#">Return Policy</a></li>
                        <li><a href="#">Shopping Guide</a></li>
                        <li><a href="#">FAQs</a></li>
                    </ul>
                </div>
            </div>
            <div class="text-center mt-4 pt-4 border-top">
                <p>© 2025 WebShop. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>