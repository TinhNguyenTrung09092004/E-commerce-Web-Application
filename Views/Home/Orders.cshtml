@model IEnumerable<WebShop.Models.Order>
@{
    ViewData["Title"] = "Order History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Order History</h2>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Total</th>
                <th>Status</th>
                <th>Payment Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@(Math.Max(0, order.Subtotal - order.Discount))</td>
                    <td>@order.Status</td>
                    <td>@order.PaymentStatus</td>
                    <td>
                        <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-info">View</a>
                        @if (order.Status != "Canceled" && order.PaymentStatus == "Unpaid")
                        {
                            <form asp-action="PayOrder" asp-route-id="@order.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-success">Pay</button>
                            </form>
                            <form asp-action="CancelOrder" asp-route-id="@order.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to cancel this order?')">Cancel</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no orders.</p>
}