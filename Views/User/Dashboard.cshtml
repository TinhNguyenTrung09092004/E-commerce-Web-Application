@model WebShop.Models.UpdateProfileViewModel
@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="dashboard-section">
    <h2 class="section-title">User Dashboard</h2>

    <div class="container">
        <div class="row g-4 justify-content-center">
            <div class="col-md-4">
                <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-primary btn-rounded btn-lg w-100">
                    <i class="fas fa-lock me-2"></i> Change Password
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("UpdateProfile", "Account")" class="btn btn-primary btn-rounded btn-lg w-100">
                    <i class="fas fa-user-edit me-2"></i> Update Profile
                </a>
            </div>
        </div>
    </div>
</section>