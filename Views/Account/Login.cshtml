@model WebShop.Models.LoginViewModel

<section class="login-section">
    <h2 class="section-title">Login</h2>

    <div class="form-container">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-4"></div>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-actions d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Products", "Home")" class="btn btn-outline-primary btn-rounded">Back to Home</a>
                        <div>
                            <a asp-action="ForgotPassword" class="text-muted me-3">Forgot your password?</a>
                            <button type="submit" class="btn btn-primary btn-rounded">Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}